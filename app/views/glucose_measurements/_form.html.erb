<%= form_for @glucose_measurement do |f| %>

  <% if @glucose_measurement.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@glucose_measurement.errors.count, "error") %> prohibited
        this measurement from being saved:
      </h2>
      <ul>
        <% @glucose_measurement.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :datetime, 'Date and time' %><br>
    <%= f.text_field :datetime, id: 'glucose_measurement_datetime', class: 'form-control' %>
  </p>

  <p>
    <%= f.label :value %><br>
    <%= f.text_field :value, class: 'form-control' %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-success' %>
  </p>
<% end %>

<script type="text/javascript">
  $(function () {
    $('#glucose_measurement_datetime').datetimepicker({
      format: 'YYYY-MM-DD HH:mm',
      defaultDate: moment()
    });
  });
</script>
