<%= form_for @glucose_measurement do |f| %>

  <% if @glucose_measurement.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@glucose_measurement.errors.count, "error") %> prohibited
        this measurement from being saved:
      </h2>
      <ul>
        <% @glucose_measurement.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :datetime %><br>
    <%= f.text_field :datetime, id: 'glucose_measurement_datetime' %>
    <script type="text/javascript">
      $(function () {
        $('#glucose_measurement_datetime').datetimepicker({
          format: 'YYYY-MM-DD HH:mm',
          defaultDate: moment()
        });
      });
    </script>
  </p>

  <p>
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </p>

  <p>
    <%= f.submit 'Create', class: 'btn btn-success' %>
  </p>

<% end %>
