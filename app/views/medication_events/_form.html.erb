<%= form_for @metric do |f| %>

  <%= render partial: 'shared/form_errors' %>

  <p>
    <%= f.label :datetime, 'Date and time' %><br>
    <%= f.text_field :datetime, id: 'medication_event_datetime', class: 'form-control' %>
  </p>

  <p>
    <%= f.label :dose %><br>
    <%= f.text_field :dose, class: 'form-control' %>
  </p>

  <p>
    <%= f.label :insulin %><br>
    <%= f.select :insulin, options_for_select(MedicationEvent.insulins), {}, {class: 'form-control'} %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-success' %>

  </p>
<% end %>

<script type="text/javascript">
  $(function () {
    $('#medication_event_datetime').datetimepicker({
      format: 'YYYY-MM-DD HH:mm',
      defaultDate: moment()
    });
  });
</script>
