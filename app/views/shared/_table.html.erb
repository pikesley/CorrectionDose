<table class='table table-bordered table-hover' id='recent'>
  <% @data.each_pair do |day, values| %>
    <tr>
      <th colspan='<%= @widest %>' class='day-marker'>
        <% date = Time.parse(day) %>
        <%= date.strftime "%A %B #{date.day.ordinalize}" %>
      </th>
    </tr>
    <% values.each do |value| %>
      <%= render partial: 'shared/table_row', locals: {
        value: value
      } %>
    <% end %>
  <% end %>
</table>
