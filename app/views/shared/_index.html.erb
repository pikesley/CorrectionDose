<div class='row'>
  <div class='col-xs-6'>
    <h1><%= class_name(@metrics).short_name %></h1>
  </div>
  <div class='col-xs-6'>
    <%= link_to "Add #{class_name(@metrics).short_name}",
        send("new_#{@metrics.class.to_s.split('::')[0].underscore}_path".to_sym),
        class: "btn #{button_name @metrics} pull-right" %>
  </div>
</div>

<% unless @no_picker %>
  <%= render partial: 'shared/hours_picker', locals: {
    label: 'Charts',
    fontawesome: 'fa-area-chart',
    path: nil
  }%>
<% end %>

<%= render partial: 'shared/table', locals: {
  metrics: @metrics,
  with_year: true
} %>
