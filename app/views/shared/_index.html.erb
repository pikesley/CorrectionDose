<div class='row'>
  <div class='col-xs-6'>
    <h1><%= @metrics.first_metric.class.short_name %></h1>
  </div>
  <div class='col-xs-6'>
    <%= link_to "Add #{@metrics.first_metric.class.short_name}",
        send("new_#{@metrics.first_metric.presenter.underscore}_path".to_sym),
        class: "btn #{@metrics.first_metric.presenter.button_name} pull-right" %>
  </div>
</div>

<% unless @no_picker %>
  <%= render partial: 'shared/hours_picker', locals: {
    label: 'Charts',
    fontawesome: 'fa-area-chart',
    path: nil
  }%>
<% end %>

<%= render partial: 'shared/table', locals: {
  metrics: @metrics,
  with_year: true
} %>
